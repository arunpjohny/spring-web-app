@border-color: #E1E1E1;

.mixin-round-border(@radius: 10px) {
	border-radius: @radius;
}

.mixin-border-t(@width: 2px, @color: #E1E1E1) {
	border-top: @width solid @color;
}
.mixin-border-r(@width: 2px, @color: #E1E1E1) {
	border-right: @width solid @color;
}
.mixin-border-b(@width: 2px, @color: #E1E1E1) {
	border-bottom: @width solid @color;
}
.mixin-border-l(@width: 2px, @color: #E1E1E1) {
	border-left: @width solid @color;
}

.mixin-border(@width: 2px, @color: #E1E1E1) {
	.mixin-border-t(@width, @color);
	.mixin-border-r(@width, @color);
	.mixin-border-b(@width, @color);
	.mixin-border-l(@width, @color);
}


.mixin-icon(@height: 32px, @width: 32px) {
    background-image: none;
    background-repeat: no-repeat;
    display: inline-block;
    height: @height;
    line-height: @height;
    vertical-align: text-top;
    width: @width;
}

